{% extends 'base.html.twig' %}

{% block title %}Course List{% endblock %}

{% block body %}

<div class="container text-center">
    <h4 class="text-primary text-center">Course Detail</h4>
    <table class="table table-info">
        <thead>
            <tr>
                <td>ID</td>
                <td>Name</td>
                <td>Code</td>
                <td>Student</td>
                <td>Teacher</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ course.id}}</td>
                <td>{{ course.name}}</td>
                <td>{{ course.code}}</td>
                <td>
                {% for b in course.students %}
                        <a style="text-decoration: none"  href="{{ path('student_detail', {'id': b.id})}}">
                            {{ b.name}}
                        </a>
                        <br>
                    {% endfor %} 
                </td>
                <td>
                {% for c in course.teachers %}
                        <a style="text-decoration: none" href="{{ path('teacher_detail', {'id': c.id})}}">
                            {{ c.name}}
                        </a>
                        <br>
                {% endfor %} 
                </td>

                <td>
                    <a class="btn btn-info" href="{{ path('course_edit', {'id': course.id})}}"> Edit</a>
                    <a class="btn btn-warning" href="{{ path('course_delete', {'id': course.id})}}"
                    onclick="return confirm('Are you sure you want to delete this course?')"
                    > Delete</a>
                    <a class="btn btn-danger" href="{{ path('course_index')}}"> Back</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
{% endblock %}
