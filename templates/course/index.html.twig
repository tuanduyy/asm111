{% extends 'base.html.twig' %}

{% block title %}Course List{% endblock %}

{% block body %}

<div class="container">
    <h4 class="text-primary text-center">Course List</h4>
        <a class="btn btn-primary" href="{{ path('course_add')}}"> Add new course</a>
    <table class="table table-striped text-center">
        <thead>
            <tr>
                <td>ID</td>
                <td>Code</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td>{{ course.id}}</td>
                <td>
                <a style="text-decoration: none" href="{{ path('course_detail', {'id': course.id})}}">{{ course.name}}</a>
                </td>
                <td>
                    <a class="btn btn-primary" href="{{ path('course_edit', {'id': course.id})}}"> Edit</a>
                    <a class="btn btn-warning" href="{{ path('course_delete', {'id': course.id})}}"
                    onclick="return confirm('Are you sure you want to delete this course?')"
                    > Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
