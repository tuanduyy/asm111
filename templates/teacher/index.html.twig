{% extends 'base.html.twig' %}

{% block title %}Teacher List{% endblock %}

{% block body %}

<div class="container">
    <h4 class="text-primary text-center">Teacher List</h4>
    <h3 class="text text-center">

        Total Teacher: {{teachers|length}}

    </h3>
        <div class="text-center">
        <form action="{{ path('search') }}" method="post">
        <input type="search" name="name" id="">
        <input type="submit" value="Search">
        </div>
    </form>
        <a class="btn btn-primary" href="{{ path('teacher_add')}}"> Add new Teacher</a>
            <select onchange="window.location.href=this.value">
            <option>Sort</option>
            <option value="{{ path('asc')}}">Ascending</option>
            <option value="{{ path('desc')}}">Descending</option>
            </select>
    <table class="table table-striped text-center">
        <thead>
            <tr>
                <td>ID</td>
                <td>Name</td>
                <td>Gmail</td>
                <td>Pictures</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
        {% for teacher in teachers %}
            <tr>
                <td>{{ teacher.id}}</td>
                <td>
                <a style="text-decoration: none" href="{{ path('teacher_detail', {'id': teacher.id})}}">{{ teacher.name}}</a>
                </td>
                <td>{{ teacher.gmail}}</td>
                <td>{{  teacher.age}}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('teacher_edit', {'id': teacher.id})}}"> Edit</a>
                    <a class="btn btn-warning" href="{{ path('teacher_delete', {'id': teacher.id})}}"
                    onclick="return confirm('Are you sure you want to delete this teacher?')"
                    > Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
