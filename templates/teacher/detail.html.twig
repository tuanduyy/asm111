{% extends 'base.html.twig' %}

{% block title %}Teacher List{% endblock %}

{% block body %}

<div class="container text-center">
    <h4 class="text-primary text-center">Teacher Detail</h4>
    <table class="table table-info">
        <thead>
            <tr>
                <td>ID</td>
                <td>Name</td>
                <td>Age</td>
                <td>Birthplace</td>
                <td>Gmail</td>
                <td>Picture</td>
                <td>Course</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ teacher.id}}</td>
                <td>{{ teacher.name}}</td>
                <td>{{ teacher.age}}</td>
                <td>{{ teacher.birthplace}}</td>
                <td>{{ teacher.gmail}}</td>
                <td>
                <img src="https://www.toponseek.com/blogs/wp-content/uploads/2019/06/toi-uu-hinh-anh-optimize-image-4-1200x700.jpg" width="100" height="100">
                </td>
                <td> {% for a in teacher.course %}
                <a style="text-decoration: none"  href="{{ path('course_detail', {'id': a.id})}}">
                {{ a.name}}
                </a>
                <br>
                {% endfor %} </td>
                <td>
                    <a class="btn btn-info" href="{{ path('teacher_edit', {'id': teacher.id})}}"> Edit</a>
                    <a class="btn btn-warning" href="{{ path('teacher_delete', {'id': teacher.id})}}"
                    onclick="return confirm('Are you sure you want to delete this teacher?')"
                    > Delete</a>
                    <a class="btn btn-danger" href="{{ path('teacher_index', {'id': teacher.id})}}"> Back</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
{% endblock %}
