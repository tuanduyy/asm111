{% extends 'base.html.twig' %}

{% block title %}Student List{% endblock %}

{% block body %}

<div class="container">
    <h4 class="text-primary text-center">Student List</h4>
        <form action="{{ path('search') }}" method="post">
        <input type="search" name="name" id="">
        <input type="submit" value="Search">
    </form>
        <a class="btn btn-primary" href="{{ path('student_add')}}"> Add new student</a>
        <br>
                    <select onchange="window.location.href=this.value">
                    <option>Sort</option>
                    <option value="{{ path('asc')}}">Ascending</option>
                    <option value="{{ path('desc')}}">Descending</option>
                </select>   
    <table class="table table-striped text-center">
        <thead>
            <tr>
                <td>ID</td>
                <td>Name</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id}}</td>
                <td>
                <a style="text-decoration: none" href="{{ path('student_detail', {'id': student.id})}}">{{student.name}}</a>
                </td>
                <td>
                    <a class="btn btn-info" href="{{ path('student_edit', {'id': student.id})}}"> Edit</a>
                    <a class="btn btn-warning" href="{{ path('student_delete', {'id': student.id})}}"
                    onclick="return confirm('Are you sure you want to delete this student?')"
                    > Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
