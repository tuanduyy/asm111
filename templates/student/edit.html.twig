{% extends 'base.html.twig' %}

{% block title %}Edit Student{% endblock %}

{% block body %}
<div class="container-fluid mt-3">
    <h2 class = "text-center mt-2"><i class="fas fa-edit    "></i> Student</h2>
    <div class = "col-md-7"></div>
        {{form_start (form) }}
            <div class="form-gourp">
                {{ form_label (form.name)}}
                {{ form_widget (form.name,
                    {
                        'attr' : {'class' : 'form-control'}
                    }
                )}}
            </div>
            <div class="form-gourp">
                {{ form_label (form.age)}}
                {{ form_widget (form.age,
                    {
                        'attr' : {'class' : 'form-control'}
                    }
                )}}
            </div>
            <div class="form-gourp">
                {{ form_label (form.birthplace)}}
                {{ form_widget (form.birthplace,
                    {
                        'attr' : {'class' : 'form-control'}
                    }
                )}}
            </div>
            <div class="form-gourp">
                {{ form_label (form.code)}}
                {{ form_widget (form.code,
                    {
                        'attr' : {'class' : 'form-control'}
                    }
                )}}
            </div>
            <div class="form-gourp">
                {{ form_label (form.gmail)}}
                {{ form_widget (form.gmail,
                    {
                        'attr' : {'class' : 'form-control'}
                    }
                )}}
            </div>
            <div class="form-gourp">
                {{ form_label (form.course)}}
                {{ form_widget (form.course,
                    {
                        'attr' : {'class' : 'form-control'}
                    }
                )}}
            </div>
            <div class="form-group text-center mt-3">
                <button type="submit" class="btn btn-info"> Save</button>
                <a class="btn btn-danger" href="{{ path('student_index')}}"> Back</a>
            </div>
        {{form_end (form) }}
    </div
</div

{% endblock %}
