{% extends 'base.html.twig' %}

{% block title %}Student List{% endblock %}

{% block body %}

<div class="container text-center">
    <h4 class="text-primary text-center">Student Detail</h4>
    <table class="table table-info">
        <thead>
            <tr>
                <td>ID</td>
                <td>Name</td>
                <td>Age</td>
                <td>Birth Place</td>
                <td>Code</td>
                <td>Gmail</td>
                <td>Picture</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ student.id}}</td>
                <td>{{ student.name}}</td>
                <td>{{ student.age}}</td>
                <td>{{ student.birthplace}}</td>
                <td>{{ student.code}}</td>
                <td>{{ student.gmail}}</td>
                <td>
                <img src="https://www.toponseek.com/blogs/wp-content/uploads/2019/06/toi-uu-hinh-anh-optimize-image-4-1200x700.jpg"width="100" height="100">
                </td>
                <td> {% for a in student.course %}
                <a style="text-decoration: none"  href="{{ path('course_detail', {'id': a.id})}}">
                {{ a.name}}
                </a>
                <br>
                {% endfor %} </td>
                <td>
                    <a class="btn btn-primary" href="{{ path('student_edit', {'id': student.id})}}"> Edit</a>
                    <a class="btn btn-warning" href="{{ path('student_delete', {'id': student.id})}}"
                    onclick="return confirm('Are you sure you want to delete this student?')"
                    > Delete</a>
                    <a class="btn btn-danger" href="{{ path('student_index')}}"> Back</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
{% endblock %}
